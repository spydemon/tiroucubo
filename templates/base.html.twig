<!DOCTYPE html>
<html lang="{{ page.lang }}">
    <head>
        <meta charset="UTF-8">
        <meta name="author" content="{{ page.author }}" />
        <title>
            {% if page.title %}
                {{ page.title }} â€”
            {% endif %}
            {{ website.title }}
        </title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            {% block header %}
                {# TODO: rename to header #}
                {{ render(controller( 'App\\Controller\\Fragment\\Navigation::display')) }}
            {% endblock %}
        </header>
        <div class="notification">
            {% block notification %}
                {{ render(controller( 'App\\Controller\\Fragment\\Notification::display')) }}
            {% endblock %}
        </div>
        <div class="main-content">
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}{% endblock %}
        <footer>
            {% block footer %}
                {{ render(controller( 'App\\Controller\\Fragment\\Footer::display')) }}
            {% endblock %}
        </footer>
    </body>
</html>
