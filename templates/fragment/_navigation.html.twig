        </div>
        <div class="item">
            <a href="{{ tiroucuboPathUrl('symfony') }}">
                {% trans %}Symfony{% endtrans %}
            </a>
        </div>
        <div class="item">
            <a href="{{  tiroucuboPathUrl('perso') }}">
                {% trans %}Personal{% endtrans %}
            </a>
        </div>
        <div class="item">
            {# TODO: handle translation in path.#}
            <a href="{{  tiroucuboPathUrl('about') }}">
                {% trans %}About{% endtrans %}
            </a>
        </div>
        {% if user_admin %}
            <div class="item admin">
                <a href="{{ path('back_dashboard') }}">{% trans %}Admin{% endtrans %}</a>
            </div>
        {% endif %}
        {% if user_authenticated %}
            <div class="item logout">
                <a href="{{ path('front_security_logout') }}">{% trans %}Logout{% endtrans %}</a>
            </div>
        {% endif %}
        {% for variant in translated_variants %}
            <div class="item lang">
                [<a href="{{ variant.url }}">{{ variant.locale }}</a>]
            </div>
        {% endfor %}
    </nav>
</div>