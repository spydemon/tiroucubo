    <div class="sub">{% trans %}Spydemon personal blog{% endtrans %}</div>
</div>
<div class="navigation">
    <nav>
        <div class="item">
            <a href="{{tiroucuboPathUrl('')}}">
                {% trans %}Home{% endtrans %}
            </a>
        </div>
        <div class="item">
            <a href="{{tiroucuboPathUrl('linux')}}">
                {% trans %}Linux{% endtrans %}
            </a>
